<h1>Books List</h1>
<table border="1">
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Actions</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
        <td><%= link_to book.title, book %></td>
        <td><%= book.author %></td>
        <td>
            <%= link_to "Edit", edit_book_path(book) %> |
            <%= link_to "Delete", book, method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
    </tr>
    <% end %>
</table>
<br>
<%= link_to "Add New Book", new_book_path %>