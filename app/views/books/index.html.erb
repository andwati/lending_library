<h1 class="text-center mb-4">Books List</h1>

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%= link_to book.title, book, class: "text-primary fw-bold" %></td>
            <td><%= book.author %></td>
            <td>
                <%= link_to "Edit", edit_book_path(book), class: "btn btn-warning btn-sm" %>
                <%= link_to "Delete", book, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

<div class="text-center mt-3">
    <%= link_to "Add New Book", new_book_path, class: "btn btn-success" %>
</div>