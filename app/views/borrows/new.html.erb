<h1>Borrow a Book</h1>

<%= form_with(model: @borrow, local: true) do |form| %>
<p>
    <%= form.label :user_id, "Select User" %><br>
    <%= form.collection_select :user_id, @users, :id, :first_name %>
</p>

<p>
    <%= form.label :book_id, "Select Book" %><br>
    <%= form.collection_select :book_id, @books, :id, :title %>
</p>

<p>
    <%= form.label :duration, "Borrow Duration (days)" %><br>
    <%= form.number_field :duration, value: 7 %>
</p>

<p>
    <%= form.submit "Borrow" %>
</p>
<% end %>

<%= link_to "Back to Books", books_path %>